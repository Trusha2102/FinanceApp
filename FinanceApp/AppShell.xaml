<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:FinanceApp.Views"
       x:Class="FinanceApp.AppShell">

    <TabBar>
        <Tab Title="Add Transaction" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate views:AddTransactionPage}" />
        </Tab>
        <Tab Title="Transactions" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate views:TransactionListPage}" />
        </Tab>
        <Tab Title="Trial Balance" Icon="balance.png">
            <ShellContent ContentTemplate="{DataTemplate views:TrialBalancePage}" />
        </Tab>
    </TabBar>
</Shell>
